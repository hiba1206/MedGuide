<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title for "Mot de passe oublié" -->
    <TextView
        android:id="@+id/forgotPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe oublié"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!-- Title for "Formulaire de réinitialisation du mot de passe" -->
    <TextView
        android:id="@+id/resetPasswordFormTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formulaire de réinitialisation du mot de passe"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- Email input field -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez votre adresse email"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:layout_marginBottom="24dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Réinitialiser le mot de passe"
        android:layout_marginBottom="24dp"/>

    <!-- Link for "Mot de passe oublié" -->
    <TextView
        android:id="@+id/forgotPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe oublié ?"
        android:textColor="@android:color/holo_blue_dark"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp"/>

    <!-- Link for "Se souvenir de votre mot de passe" -->
    <TextView
        android:id="@+id/rememberPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se souvenir de votre mot de passe"
        android:textColor="@android:color/holo_blue_dark"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp"/>

    <!-- Link to "Se connecter ici" -->
    <TextView
        android:id="@+id/loginHereText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se connecter ici"
        android:textColor="@android:color/holo_blue_dark"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>
