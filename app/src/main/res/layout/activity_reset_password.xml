<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    android:background="@android:color/background_light">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrez le code de réinitialisation"
        android:textSize="20sp"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <EditText
        android:id="@+id/codeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrer le code"
        android:inputType="text"
        android:background="@drawable/rounded_cardview"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        />

    <Button
        android:id="@+id/verifyCodeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vérifier le code"
        android:backgroundTint="@color/MedGuide_blue"
        android:background="@drawable/rounded_cardview"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        android:layout_marginTop="8dp" />

</LinearLayout>
