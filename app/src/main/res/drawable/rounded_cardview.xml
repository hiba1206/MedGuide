<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@color/white" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Border (optional) -->
    <stroke
        android:width="1dp"
        android:color="@color/MedGuide_blue" />

    <!-- Padding (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
